@model BiasedSocialMedia.Web.Models.Users
<div class="user-login-status my-card d-flex">
    <img class="profile-photo" src="@Url.Action("Images","Image",new {id=Model.ProfilePhotoID})" height="80" width="80" />
    <div>
        <h5>@Model.Name</h5>
        <p>@@@Model.UserName</p>
        <p><i class="fa fa-circle" style="color:green;font-size:10px;"></i> Active</p>
    </div>
</div>
