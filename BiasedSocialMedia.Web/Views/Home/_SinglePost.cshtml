@model BiasedSocialMedia.Web.Models.Posts
<div class="post-body my-card my-card-hover">
    <div class="single-post d-flex">
        <div>
            <a href="@Url.Action("Index","Profile",new {id=Model.User.ID})"><img src="@Url.Action("Images","Image",new {id=Model.User.ProfilePhotoID})" height="90" width="90" class="profile-photo" /></a>
        </div>
        <div style="width:100%">
            <div><h5 class="mb-0">@Model.User.Name</h5><p class="m-0 text-muted">@@@Model.User.UserName</p></div>
            <p class="max-lines">@Model.PostContent</p>
            @*<div>
                <img src="~/Content/Images/total-posts.png" style="object-fit:cover" height="100" width="100"/>
                <img src="~/Content/Images/total-posts.png" style="object-fit:cover" height="100" width="100"/>
            </div>*@
            <div style="display: flex; width:100%">
                <div class="d-flex justify-content-center align-items-center post-like-btn" data-id="@Model.PostID" style="cursor:pointer">
                    <p style="margin-right: 5px">@Model.LikeCount</p><i class="fa fa-thumbs-o-up"></i>
                </div>
                <div class="d-flex justify-content-lg-center align-items-center" style="cursor:pointer">
                    <p style="margin-right: 5px">0</p><span class="fa fa-thumbs-o-down"></span>
                </div>
                <div class="d-flex justify-content-lg-center align-items-center" style="cursor:pointer">
                    <p style="margin-right: 5px">100</p><span class="fa  fa-comment-o"></span>
                </div>
                @*<p style="margin-right: 8px;"><span class="fa fa-ellipsis-v"></span></p>*@
                <p class="single-post-date mt-2" style="margin-left:auto">@Model.GetPostTimeInString()</p>
            </div>
        </div>
    </div>
</div>
