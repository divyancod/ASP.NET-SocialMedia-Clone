@{

    ViewBag.Title = "Index";
}
<div class="flex-main-div">
    <div class="signin">

        <form action="~/Login/Index" method="post" autocomplete="off">

            <div class="group">

                <h2>Welcome Back,</h2>

                <p>Sign In To Continue</p>

            </div>

            <div class="group">

                <label class="label-input" for="username-field">Email or Username</label><br>

                <input type="text" name="email" id="email-field" required>

            </div>

            <div class="group">

                <label class="label-input" for="password-field">Password</label><br>

                <input type="password" name="password" id="password-field" required>

                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>

            </div>

            <div class="group forgot-pass-link">

                <a href="#">Forgot Password?</a>

            </div>

            <div class="group">

                <button type="submit"><span>Login</span></button>

            </div>

            <div class="group sign-up-link">

                <p>New User? <a href="~/Login/SignUp">Signup</a></p>

            </div>

        </form>

    </div>
</div>
