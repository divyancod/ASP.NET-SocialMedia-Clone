<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BiasedMedia</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/myCss")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="my-loader"><h1>Loading...</h1></div>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("BiasedMedia", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            @{ if (User.Identity.IsAuthenticated)
                {
                    <div>
                        <a href="@Url.Action("Notifications","Home")"><img src="~/Content/Images/notification.png" height="22" width="22" /></a>
                        @Html.ActionLink("Profile", "Index", "Profile", new { id = User.Identity.Name }, new { @class = "text-light" });
                        @Html.ActionLink("Logout", "Logout", "Login", new { area = "" }, new { @class = "text-light" });
                    </div>
                }
            }

        </div>
    </nav>
    <div class="my-toast-container"></div>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>
